{
    "app-id": "com.abisource.AbiWord",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "abiword",
    "desktop-file-name-prefix": "(Beta) ",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-documents",
        "--share=network",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd"
    ],
    "build-options" : {
        "env" : {
            "V" : "0"
        }
    },
    "cleanup" : [
        "/lib/pkgconfig",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name" : "boost",
            "buildsystem" : "simple",
            "cleanup" : [
                "/include",
                "/lib/libboost_*.so*",
                "/lib/libboost_*.a"
            ],
            "build-commands": [
              "./bootstrap.sh --with-libraries=atomic",
              "./b2 install variant=release link=shared runtime-link=shared --prefix=/app --without-math --without-thread --without-container --without-log --without-system --without-filesystem --without-chrono --without-random --without-python -j $FLATPAK_BUILDER_N_JOBS"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/boost/boost/1.80.0/boost_1_80_0.tar.bz2",
                    "sha256": "1e19565d82e43bc59209a168f5ac899d3ba471d55c7610c677d4ccf2c9c500c0"
                }
            ]
        },
        {
            "name" : "gsf",
            "cleanup" : [
                "/include",
                "/lib/pkgconfig",
                "/share/man",
                "/share/gtk-doc/html/gsf",
                "/share/thumbnailers",
                "/bin/gsf*"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgsf/1.14/libgsf-1.14.51.tar.xz",
                    "sha256": "f0b83251f98b0fd5592b11895910cc0e19f798110b389aba7da1cb7c474017f5",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libgsf",
                        "versions": {
                            "<": "1.15"
                        },
                        "stable-only": true
                    }
                }
            ]
        },
        {
            "name" : "libwmf",
            "cleanup" : [
                "/include",
                "/lib/gtk-2.0",
                "/share/doc/libwmf",
                "/bin/libwmf*",
                "/bin/wmf*"
            ],
            "config-opts": [
                "--with-freetype=/usr"
            ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://github.com/caolanm/libwmf.git",
                    "tag": "v0.2.12",
                    "commit": "5b7af9cf44c688770f174533dbe14c8953ec39cd"
                },
                {
                    "type": "patch",
                    "path": "patches/libwmf-autoheader.patch"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "wv",
            "cleanup" : [
                "/include",
                "/share/man",
                "/share/wv",
                "/lib/pkgconfig",
                "/bin/wv*"
            ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://github.com/AbiWord/wv.git",
                    "tag": "wv-1-2-9",
                    "commit": "30692affae5ee38f4804e1621e10e1f4f58d3fd3"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "touch AUTHORS ChangeLog"
                    ]
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "link-grammar",
            "cleanup" : [
                "/include",
                "/lib/pkgconfig",
                "/bin/link-parser"
            ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://github.com/AbiWord/link-grammar.git",
                    "tag": "link-grammar-5.3.11",
                    "commit": "48fd63ebfeb570b418e1068ed434c8b17bf743f2"
                }
            ]
        },
        {
            "name" : "lasem",
            "cleanup" : [
                "/include",
                "/lib/pkgconfig",
                "/doc",
                "/share/gir-1.0",
                "/share/gtk-doc",
                "/share/man",
                "/bin/lasem*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/lasem/0.5/lasem-0.5.1.tar.xz",
                    "sha256" : "51f019984bc94b8a0dec70bb7af2950345759304584a5cc3d990d9ff2c66b443"
                }
            ]
        },
        {
            "name" : "goffice",
            "cleanup" : [
                "/include",
                "/share/gtk-doc",
                "/lib/pkgconfig"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/goffice/0.10/goffice-0.10.56.tar.xz",
                    "sha256": "b8640a2fee0c0a57784b2a5b92944a2932c789db1039ddf5a269ad634796e7e2",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "goffice",
                        "versions": {
                            "<": "0.11"
                        },
                        "stable-only": true
                    }
                }
            ]
        },
        {
            "name": "librevenge",
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "config-opts": [
                "--disable-tests",
                "--disable-werror",
                "--without-docs"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/libwpd/librevenge/librevenge-0.0.4/librevenge-0.0.4.tar.xz",
                    "sha256" : "933f0729f04267cc354b9a02bc3e9afefa5512a3bdd0b45f159ee14a3e3347b2"
                }
            ]
        },
        {
            "name" : "libwpd",
            "build-options": {
                "cxxflags": "-Wno-error=restrict"
            },
            "config-opts": [
                "--without-docs"
            ],
            "cleanup" : [
                "/include",
                "/share/doc",
                "/lib/pkgconfig",
                "/bin/wpd*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://downloads.sourceforge.net/project/libwpd/libwpd/libwpd-0.10.3/libwpd-0.10.3.tar.xz",
                    "sha256" : "2465b0b662fdc5d4e3bebcdc9a79027713fb629ca2bff04a3c9251fdec42dd09"
                },
                {
                    "type": "patch",
                    "path": "patches/libwpd-fix.patch"
                }
            ]
        },
        {
            "name" : "libwpg",
            "cleanup" : [
                "/include",
                "/share/doc",
                "/lib/pkgconfig",
                "/bin/wpg*"
            ],
            "config-opts": [
                "--without-docs"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://downloads.sourceforge.net/project/libwpg/libwpg/libwpg-0.3.3/libwpg-0.3.3.tar.xz",
                    "sha256" : "99b3f7f8832385748582ab8130fbb9e5607bd5179bebf9751ac1d51a53099d1c"
                }
            ]
        },
        {
            "name" : "psiconv",
            "cleanup" : [
                "/include",
                "/share/man",
                "/share/psiconv",
                "/bin/psiconv*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "http://www.frodo.looijaard.name/system/files/software/psiconv/psiconv-0.9.9.tar.gz",
                    "sha256" : "6d51fe79b502a1e277bea275a574ae2db5b1b9d7daef703a8fa3635ae02a8bb0"
                },
                {
                    "type": "patch",
                    "path": "patches/psiconv-fixes.patch"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "gtkmathview",
            "cleanup" : [
                "/include",
                "/lib/pkgconfig",
                "/share/man",
                "/bin/mathml*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/AbiWord/gtkmathview/releases/download/0.8.1/gtkmathview-0.8.1.tar.xz",
                    "sha256" : "2ab60a33ef1cd76591e70770799e6bc0b2600c5366933a7c1978a33a54faae44"
                }
            ]
        },
        {
            "name": "libwps",
            "cleanup": [
                "/include",
                "/share/doc",
                "/lib/pkgconfig",
                "/bin/wks*",
                "/bin/wps*"
            ],
            "config-opts" : [
                "--disable-werror",
                "--without-docs"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/libwps/libwps/libwps-0.4.12/libwps-0.4.12.tar.xz",
                    "sha256": "e21afb52a06d03b774c5a8c72679687ab64891b91ce0c3bdf2d3e97231534edb"
                }
            ]
        },
        {
            "name": "enchant",
            "config-opts": [
                "--with-hunspell",
                "--with-myspell-dir=/usr/share/hunspell"
            ],
            "build-options": {
                "cflags": "-fpermissive"
            },
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/bin/enchant"
            ],
            "post-install": [
                "install -p -D -m 0644 COPYING.LIB -t ${FLATPAK_DEST}/share/licenses/enchant/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/AbiWord/enchant.git",
                    "//": "tags/enchant-1-6-0",
                    "commit": "02f3b4a85560b93d9a0aa593ef70e5496d0f029c"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "abiword",
            "config-opts" : [
                "--enable-plugins=auto"
            ],
            "cleanup": [
                "/include"
            ],
            "sources" : [
              {
                "type" : "git",
                "url" : "https://gitlab.gnome.org/World/AbiWord.git",
                "//": "master branch",
                "commit": "9382ba575f401e703cd34e626c3ef3bc0967bf9b"
              },
              {
                "type" : "shell",
                "commands" : [
                  "NOCONFIGURE=1 ./autogen.sh"
                ]
              }
            ]
        }
    ]
}
