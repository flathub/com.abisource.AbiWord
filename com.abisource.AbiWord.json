{
    "app-id": "com.abisource.AbiWord",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "abiword",
    "desktop-file-name-prefix": "(Beta) ",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-documents",
        "--share=network",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd"
    ],
    "build-options" : {
        "env" : {
            "V" : "0"
        }
    },
    "cleanup" : [
        "/lib/pkgconfig",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name" : "boost",
            "buildsystem" : "simple",
            "cleanup" : [
                "/include",
                "/lib/libboost_*.so*",
                "/lib/libboost_*.a"
            ],
            "build-commands": [
              "./bootstrap.sh --with-libraries=atomic",
              "./b2 install variant=release link=shared runtime-link=shared --prefix=/app --without-math --without-thread --without-container --without-log --without-system --without-filesystem --without-chrono --without-random --without-python -j $FLATPAK_BUILDER_N_JOBS"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://downloads.sourceforge.net/project/boost/boost/1.60.0/boost_1_60_0.tar.bz2",
                    "sha256" : "686affff989ac2488f79a97b9479efb9f2abae035b5ed4d8226de6857933fd3b"
                }
            ]
        },
        {
            "name" : "gsf",
            "cleanup" : [
                "/include",
                "/lib/pkgconfig",
                "/share/man",
                "/share/gtk-doc/html/gsf",
                "/share/thumbnailers",
                "/bin/gsf*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/libgsf/1.14/libgsf-1.14.49.tar.xz",
                    "sha256" : "e9ebe36688f010c9e6e40c8903f3732948deb8aca032578d07d0751bd82cf857"
                }
            ]
        },
        {
            "name" : "libwmf",
            "cleanup" : [
                "/include",
                "/lib/gtk-2.0",
                "/share/doc/libwmf",
                "/bin/libwmf*",
                "/bin/wmf*"
            ],
            "config-opts": [
                "--with-freetype=/usr"
            ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://github.com/caolanm/libwmf.git",
                    "tag": "v0.2.12",
                    "commit": "5b7af9cf44c688770f174533dbe14c8953ec39cd"
                },
                {
                    "type": "patch",
                    "path": "patches/libwmf-autoheader.patch"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "wv",
            "cleanup" : [
                "/include",
                "/share/man",
                "/share/wv",
                "/lib/pkgconfig",
                "/bin/wv*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.abisource.com/downloads/wv/1.2.9/wv-1.2.9.tar.gz",
                    "sha256" : "4c730d3b325c0785450dd3a043eeb53e1518598c4f41f155558385dd2635c19d"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "touch AUTHORS ChangeLog"
                    ]
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "link-grammar",
            "cleanup" : [
                "/lib/pkgconfig",
                "/bin/link-parser"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.abisource.com/downloads/link-grammar/5.3.11/link-grammar-5.3.11.tar.gz",
                    "sha256" : "73ca3ae82ec7ddbfce827eb7017a2953afea2cea854b4d7517139881e1170cd7"
                }
            ]
        },
        {
            "name" : "lasem",
            "cleanup" : [
                "/include",
                "/lib/pkgconfig",
                "/doc",
                "/share/gir-1.0",
                "/share/gtk-doc",
                "/share/man",
                "/bin/lasem*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/lasem/0.5/lasem-0.5.1.tar.xz",
                    "sha256" : "51f019984bc94b8a0dec70bb7af2950345759304584a5cc3d990d9ff2c66b443"
                }
            ]
        },
        {
            "name" : "goffice",
            "cleanup" : [
                "/include",
                "/share/gtk-doc",
                "/lib/pkgconfig"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/goffice/0.10/goffice-0.10.52.tar.xz",
                    "sha256" : "60b9efd94370f0969b394f0aac8c6eb91e15ebc0ce1236b44aa735eb1c98840c"
                }
            ]
        },
        {
            "name": "librevenge",
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "config-opts": [
                "--disable-tests",
                "--disable-werror"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/libwpd/librevenge/librevenge-0.0.4/librevenge-0.0.4.tar.xz",
                    "sha256" : "933f0729f04267cc354b9a02bc3e9afefa5512a3bdd0b45f159ee14a3e3347b2"
                }
            ]
        },
        {
            "name" : "libwpd",
            "build-options": {
                "cxxflags": "-Wno-error=restrict"
            },
            "cleanup" : [
                "/include",
                "/share/doc",
                "/lib/pkgconfig",
                "/bin/wpd*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://downloads.sourceforge.net/project/libwpd/libwpd/libwpd-0.10.3/libwpd-0.10.3.tar.xz",
                    "sha256" : "2465b0b662fdc5d4e3bebcdc9a79027713fb629ca2bff04a3c9251fdec42dd09"
                },
                {
                    "type": "patch",
                    "path": "patches/libwpd-fix.patch"
                }
            ]
        },
        {
            "name" : "libwpg",
            "cleanup" : [
                "/include",
                "/share/doc",
                "/lib/pkgconfig",
                "/bin/wpg*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://downloads.sourceforge.net/project/libwpg/libwpg/libwpg-0.3.3/libwpg-0.3.3.tar.xz",
                    "sha256" : "99b3f7f8832385748582ab8130fbb9e5607bd5179bebf9751ac1d51a53099d1c"
                }
            ]
        },
        {
            "name" : "psiconv",
            "cleanup" : [
                "/include",
                "/share/man",
                "/share/psiconv",
                "/bin/psiconv*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "http://www.frodo.looijaard.name/system/files/software/psiconv/psiconv-0.9.9.tar.gz",
                    "sha256" : "6d51fe79b502a1e277bea275a574ae2db5b1b9d7daef703a8fa3635ae02a8bb0"
                },
                {
                    "type": "patch",
                    "path": "patches/psiconv-fixes.patch"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "gtkmathview",
            "cleanup" : [
                "/include",
                "/lib/pkgconfig",
                "/share/man",
                "/bin/mathml*"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://archive.org/download/gtkmathview-0.8.0.tar.gz/gtkmathview-0.8.0.tar.gz",
                    "sha256" : "1dc30175da6a3c560a7d62d1abe1c2f9829d988e6f1a7c5e766544575c558c43"
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/gtkmathview/0003-gcc-4.3-build-fixes.patch",
                        "patches/gtkmathview/0004-gcc-4.4-build-fixes.patch",
                        "patches/gtkmathview/0005-gcc-4.7-build-fixes.patch",
                        "patches/gtkmathview/missingLib.diff",
                        "patches/gtkmathview/remove_t1_include.diff",
                        "patches/gtkmathview/fix-cpp-headers.patch",
                        "patches/gtkmathview/gcc-6-build-fixes.patch",
                        "patches/gtkmathview/configure_ac.patch"
                    ]
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "libwps",
            "cleanup": [
                "/include",
                "/share/doc",
                "/lib/pkgconfig",
                "/bin/wps*"
            ],
            "config-opts" : [
                "--disable-werror"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/libwps/libwps/libwps-0.4.12/libwps-0.4.12.tar.xz",
                    "sha256": "e21afb52a06d03b774c5a8c72679687ab64891b91ce0c3bdf2d3e97231534edb"
                }
            ]
        },
        {
            "name": "enchant",
            "config-opts": [
                "--with-hunspell",
                "--with-myspell-dir=/usr/share/hunspell"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/bin/enchant"
            ],
            "post-install": [
                "install -p -D -m 0644 COPYING.LIB -t ${FLATPAK_DEST}/share/licenses/enchant/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.abisource.com/downloads/enchant/1.6.0/enchant-1.6.0.tar.gz",
                    "sha256": "2fac9e7be7e9424b2c5570d8affe568db39f7572c10ed48d4e13cddf03f7097f"
                },
                {
                    "type" : "shell",
                    "commands" : [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "abiword",
            "config-opts" : [
                "--enable-plugins=auto"
            ],
            "sources" : [
              {
                "type" : "git",
                "url" : "https://gitlab.gnome.org/World/AbiWord.git",
                /* "branch": "master", */
                "commit": "085dc27efff062371eacdbc6e86d1684aad5c383"
              },
              {
                "type" : "shell",
                "commands" : [
                  "NOCONFIGURE=1 ./autogen.sh"
                ]
              }
            ]
        }
    ]
}
